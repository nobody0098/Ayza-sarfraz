<div class="product-grid">
  {% for product in collections.frontpage.products %}
  <div class="product-card">
    <div class="product-image">
      <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
      <button class="view-details-btn" data-handle="{{ product.handle }}">View Details</button>
    </div>
  </div>
  {% endfor %}
</div>

<div id="product-popup" class="popup hidden">
  <div class="popup-content">
    <span class="close-btn">&times;</span>
    <div id="popup-product-details"></div>
  </div>
</div>

<style>
  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
  }

  .product-card {
    position: relative;
    overflow: hidden;
  }

  .product-image img {
    width: 100%;
    display: block;
  }

  .view-details-btn {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(0, 0, 0, 0.7);
    color: white;
    border: none;
    padding: 10px 20px;
    opacity: 0;
    transition: opacity 0.3s;
  }

  .product-card:hover .view-details-btn {
    opacity: 1;
  }

  .popup {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
  }

  .popup.hidden {
    display: none;
  }

  .popup-content {
    background: white;
    padding: 20px;
    border-radius: 5px;
    width: 80%;
    max-width: 500px;
    position: relative;
  }

  .close-btn {
    position: absolute;
    top: 10px;
    right: 10px;
    cursor: pointer;
    font-size: 20px;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const popup = document.getElementById('product-popup');
    const popupContent = document.getElementById('popup-product-details');
    const closeButton = document.querySelector('.close-btn');

    document.querySelectorAll('.view-details-btn').forEach((button) => {
      button.addEventListener('click', async (event) => {
        const productHandle = event.target.dataset.handle;

        // Fetch product details via AJAX
        const response = await fetch(/products/${productHandle}.js);
        const product = await response.json();

        // Populate popup with product details
        popupContent.innerHTML = `
          <h2>${product.title}</h2>
          <img src="${product.images[0]}" alt="${product.title}">
          <p>${product.description}</p>
          <label>Quantity:</label>
          <input type="number" min="1" value="1" id="quantity">
          <button class="add-to-cart" data-id="${product.variants[0].id}">Add to Cart</button>
        `;

        popup.classList.remove('hidden');
      });
    });

    closeButton.addEventListener('click', () => {
      popup.classList.add('hidden');
    });

    document.addEventListener('click', (event) => {
      if (event.target === popup) {
        popup.classList.add('hidden');
      }
    });

    // Add to Cart Button
    popupContent.addEventListener('click', async (event) => {
      if (event.target.classList.contains('add-to-cart')) {
        const variantId = event.target.dataset.id;
        const quantity = document.getElementById('quantity').value;

        // Add product to cart
        await fetch('/cart/add.js', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id: variantId, quantity: parseInt(quantity, 10) }),
        });

        alert('Product added to cart!');
        popup.classList.add('hidden');
      }
    });
  });
</script>